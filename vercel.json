{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "node_modules/@sparticuz/chromium/**",
          "node_modules/puppeteer-extra/**",
          "node_modules/puppeteer-extra-plugin-stealth/**",
          "node_modules/puppeteer-extra-plugin-user-preferences/**",
          "lib/**"
        ],
        "maxLambdaSize": "120mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
  }
}
